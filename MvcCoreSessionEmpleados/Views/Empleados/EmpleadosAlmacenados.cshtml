@{
    List<Empleado> empleados = Context.Session.GetObject<List<Empleado>>("EMPLEADOS");
}
@{
    ViewData["Title"] = "EmpleadosAlmacenados";
}

<h1>EmpleadosAlmacenados</h1>

@if(empleados != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Oficio
                </th>
                <th>
                    Salario
                </th>
                <th>
                    Departamento
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in empleados) {
            <tr>
                <td>
                    @item.IdEmpleado
                </td>
                <td>
                    @item.Apellido
                </td>
                <td>
                    @item.Oficio
                </td>
                <td>
                    @item.Salario
                </td>
                <td>
                    @item.IdDepartamento
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
    }
        </tbody>
    </table>

}
else
{
    <h2 style="color:red">No existen empleados en Session</h2>
}
